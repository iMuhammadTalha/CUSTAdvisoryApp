<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeadAdvisorAnnouncements">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarHeadAdvisor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-102dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:subtitleTextColor="@color/white"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/primary"
        android:text="Advisor Accouncements"
        android:textSize="20sp"
        android:textStyle="bold" />




    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnPreviousAnnouncments"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:fontFamily="sans-serif-thin"
        android:hint="Title"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/etDescription"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/btnPreviousAnnouncments"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:fontFamily="sans-serif-thin"
        android:hint="Description"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/btnAddAnnouncement"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="194dp"
        android:textColor="#ffffff"
        android:background="@drawable/sign_border"
        android:text="Add" />


    <Button
        android:id="@+id/btnPreviousAnnouncments"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="View Announcments"
        android:layout_marginBottom="110dp"
        android:textColor="#ffffff"
        android:background="@drawable/sign_border" />


    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyrights"
        android:textColor="@color/pureBlack"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>